@model List<Office>
@{
    int index = 0;
    ViewData["Title"] = "Index";
}

<h1>Office</h1>
<hr />
<a asp-controller="Office" asp-action="Add" class="btn btn-outline-primary"><i class="fa-solid fa-plus fa-2xl"></i>New Office</a>
<hr />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Office ins in Model)
        {
            <tr>
                <th scope="row">@(++index)</th>
                <td>@ins.Name</td>
                <td>@ins.Location</td>
                <td>
                    <a asp-controller="Office" asp-action="Details" asp-route-id="@ins.Id"><i class="fa-solid fa-circle-info fa-lg" style="color: #346fd5;"></i></a> <i class="fa-solid fa-grip-lines-vertical"></i>
                    <a asp-controller="Office" asp-action="EditForm" asp-route-id="@ins.Id"><i class="fa-solid fa-pen-to-square fa-lg" style="color: #346fd5;"></i></a> <i class="fa-solid fa-grip-lines-vertical"></i>
                    <a asp-controller="Office" asp-action="Delete" asp-route-id="@ins.Id"><i class="fa-solid fa-trash fa-lg" style="color: #346fd5;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>