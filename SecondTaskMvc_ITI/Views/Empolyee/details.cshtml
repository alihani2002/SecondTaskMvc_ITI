@model Empolyee
@{
    ViewData["Title"] = "details";
}

<div class="card text-white bg-dark mb-3" style=" align-items: center ; max-width: 18rem; text-align :center;">
    <div class="card-header">details</div>
    <div class="card-body">
        <h5 class="card-title">Empolyee Details</h5>
        <p class="card-text">Name : @Model.Name</p>
        <p class="card-text">Address : @Model.Address</p>
        <p class="card-text">Salary : @Model.Salary</p>
        <p class="card-text">Email : @Model.email</p>
        <p class="card-text">Office Id : @Model.Office_Id</p>

    </div>
    <h5><a class="btn btn-outline-primary" href="/empolyee/index">Back to list</a></h5>
</div>